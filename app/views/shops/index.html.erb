<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1> CBS Catalog</h1>

<% cache ['shop', Product.latest] do %>
  <% @products.each do |products| %>
    <% cache ['entry', products] do %>
      <div class="entry">
        <%= image_tag(products) %>
        <h3><%= products.title %></h3>
        <%= sanitize(products.description) %>
        <div class= "pricce_line">
          <span class="price"><%= number_to_currency(products.price) %></span>
          <%= button_to 'Add to Cart', line_items_path(product_id: products) %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
